
@model  IEnumerable<NguyenTin_lab456.Models.Course>

@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <ul class="course" >
        @foreach (var course in Model)
        {

            
           <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecturer">
                        @course.Lecturer.Name
                    </span>
                    <spam class="calegory">
                        @course.Category.Name
                    </spam>
                </div>
                
            </li>
        }
    </ul>
</div>
